
import random
import time
currentotp = None
stopgenerating = False

def generateotp():
    global currentotp, stopgenerating
    while not stopgenerating:
        currentotp = random.randint(100000, 999999)               #generates the OTP's
        print(f"Current Password: {currentotp}")
        time.sleep(30)

        
generateotp()

